<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diseases</title>
</head>
<body>
    <%- include ('../partials/navbar') %>
    <p></p>
    <a href="/disease/add"><button>Add</button></a>
    <table border="1">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        <% diseases.forEach(el => { %>
            <tr>
                <td><%= el.name %> </td>
                <td><%= el.description %> </td>
                <td>
                    <a href="/disease/edit/<%= el.id %>"><button>Edit</button></a>
                    <a href="/disease/delete/<%= el.id %>"><button>Hapus</button></a>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>
