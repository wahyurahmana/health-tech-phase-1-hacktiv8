<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Poly</title>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      tr:hover {
        background-color: gray;
      }
    </style>
  </head>
  <body>
    <h2>List Poly</h2>
    <div style="margin: 20px">
      <a href="/poly/addPoly"><button>Add Poly</button></a>
    </div>
    <table>
      <tr>
        <th>No</th>
        <th>Poly Type</th>
        <th>Action</th>
      </tr>
      <% data.forEach((el, i) => { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%=el.name%></td>
        <td>
          <a href="/poly/<%= el.id %>/updatePoly "><button>edit</button></a>
          <a href="/poly/<%= el.id %>/delete "><button>delete</button></a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
